		{
			"name": "Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const responce = pm.response.json();\r",
							"const nonFictionBooks = responce.filter((book) => book.available === true);\r",
							"const book = nonFictionBooks[0];\r",
							"// console.log(responce[1].name)\r",
							"// pm.test(\"The ID of  the response is to eql 1  \", () => {\r",
							"//     pm.expect(responce[0].id).to.eql(2)\r",
							"// })\r",
							"if (book) {\r",
							"    pm.globals.set(\"bookid\", book.id);\r",
							"}\r",
							"pm.test(\"Book found\", () => {\r",
							"    pm.expect(book).to.be.an('object');\r",
							"    pm.expect(book.available).to.be.true;\r",
							"    pm.expect(book.available).to.eql(true);\r",
							"    pm.expect(book.type).to.eql(\"non-fiction\");\r",
							"})\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/books?type=non-fiction",
					"host": [
						"{{baseUrl}}"
					],
					"path": [
						"books"
					],
					"query": [
						{
							"key": "type",
							"value": "non-fiction"
						}
					]
				}
			},
